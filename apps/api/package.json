{
    "name": "@votorantim-futebol/api",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "node dist/main",
        "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/main.ts",
        "start:debug": "ts-node-dev --respawn --debug --transpile-only -r tsconfig-paths/register src/main.ts",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.0.0",
        "@nestjs/platform-express": "^10.0.0",
        "@votorantim-futebol/database": "*",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.4",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@types/express": "^4.17.17",
        "@types/node": "^20.3.1",
        "@types/passport-jwt": "^4.0.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    }
}